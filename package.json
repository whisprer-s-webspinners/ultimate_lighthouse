{
  "name": "ultimate-lighthouse-web",
  "version": "3.0.0",
  "description": "Web interface for Ultimate Lighthouse Beacon System with SimdJSON power",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "lighthouse": "node server.js --mode=lighthouse",
    "listener": "node server.js --mode=listener",
    "build": "echo 'C++ executable should be compiled separately'",
    "test": "echo 'Testing Ultimate Lighthouse System...' && node test.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "deploy": "bash start-lighthouse.sh",
    "deploy:systemd": "sudo bash start-lighthouse.sh --systemd"
  },
  "keywords": [
    "lighthouse",
    "beacon",
    "simdjson",
    "monitoring",
    "performance",
    "json-parsing",
    "udp",
    "networking"
  ],
  "author": "RYO Modular Engineering",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.3",
    "dgram": "^1.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/whisprer/ultimate-lighthouse"
  },
  "bugs": {
    "url": "https://github.com/whisprer/ultimate-lighthouse/issues"
  },
  "homepage": "https://github.com/whisprer/ultimate-lighthouse#readme"
}